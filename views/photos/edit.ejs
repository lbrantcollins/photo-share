<!DOCTYPE html>
<html>
<%- include("../header") -%>
<body>
   

	<section id="gallery">
      <div class="container">
      <h1>Edit Photo Entry</h1>
         <div class="row">
            <div class="col-lg-6 mb-6">
               <div class="card">
                  <img class="card-img-top" src="<%=photo.url%>" alt="a photo">

                  <form method="POST", action="/photos/<%=photo._id%>?_method=PUT">

                     <div class=form-group>
                        <div class="input-group">
                           <div class="input-group-prepend">
                              <span class="input-group-text">Image URL</span>
                           </div>
                           <input type="url" class="form-control" name="url" value="<%=photo.url%>" >
                        </div>
                     </div>

                     <div class=form-group>
                        <div class="input-group">
                           <div class="input-group-prepend">
                              <span class="input-group-text">Username</span>
                           </div>
                           <input type="text" class="form-control" name="user" value="<%=photo.user%>" >
                        </div>
                     </div>

                     <div class=form-group>
                        <div class="input-group">
                           <div class="input-group-prepend">
                              <span class="input-group-text">Title</span>
                           </div>
                           <input type="text" class="form-control" name="title" value="<%=photo.title%>" >
                        </div>
                     </div>

                     <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" name="description" rows="6"><%=photo.description%></textarea>
                     </div>

               		<p class=buttons>
               			<button class="btn btn-secondary btn-sm">Submit Changes</button>
                        <a href="/photos" class="btn btn-outline-secondary btn-sm">Return to Photos List</a>
               		</p>

                  </form>

               </div>
            </div>
         </div>
      </div>
   </section>


</body>
</html>