<!DOCTYPE html>
<html>
<%- include("../header") -%>
<body>
		
   <section id="gallery">
      <div class="container">
         <div>
            <a href="/photos/new" class="btn btn-outline-secondary btn-sm">Add a Photo</a>
            &nbsp;
            <h1 class=main-header>BW PhotoBase</h1>
         </div>

         <div class="row">

            <% for (let i = 0; i < photos.length; i++) { %>

               <div class="col-lg-4 mb-4">
                  <div class="card">
                     <img class="card-img-top" src="<%=photos[i].url%>" alt="a photo">
                     <div class="card-body">
                        <h5 class="card-title"><%=photos[i].title%></h5>
                        <!-- <p class="card-text">by <%=photos[i].user%></p> -->
                        <a href="/photos/<%=photos[i]._id%>" class="btn btn-outline-secondary btn-sm">Read More</a>
                     </div>
                  </div>
               </div>

            <% } %>

         </div>
      </div>
   </section>

</body>
</html>

