                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="remember"> Remember Me
                                            </label>
                                        </div>
                                    </div>
                                </div> -->

                                <div class="col-md-6 offset-md-4">
                                    <button type="submit" class="btn btn-secondary btn-sm">
                                        Register
                                    </button>
                                    <div>
                                        Aready a member?&nbsp;
                                        <a href="/auth/login" class="btn-link">
                                            Log in
                                        </a>
                                    </div>
